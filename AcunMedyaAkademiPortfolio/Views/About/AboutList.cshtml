@model List<AcunMedyaAkademiPortfolio.Models.TblAbout>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hakkında Listesi</h2>

<table class=" table table-bordered">
    <tr>
        <th>About ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim URL</th>      
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr >
                    <td>@item.AboutID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.ImageUrl</td>
                    <td ><a href="/About/DeleteAbout/@item.AboutID" class=" btn btn-danger">Sil</a></td>
                    <td><a href="#" class=" btn btn-success">Güncelle</a></td>
                </tr>
            }
</table>
<a href="/About/CreateAbout/" class="btn btn-primary">Yeni Hakkında Girişi</a>

