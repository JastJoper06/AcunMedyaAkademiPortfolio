@model List<AcunMedyaAkademiPortfolio.Models.TblService>
@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Servis Listesi</h2>

<table class=" table table-bordered">
    <tr>
        <th>Service ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Resim Url</th>
    </tr>


    @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServiceID</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.ImageUrl</td>
                    <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
                    <td><a href="#" class="btn btn-success">Güncelle</a></td>
                </tr>
            }
</table>
<a href="/Service/CreateService/" class="btn btn-primary">Yeni Servis Girişi</a>
